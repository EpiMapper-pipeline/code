#MAC OS 15.0.1
# 1.   Create a virtual environment:
conda create --name epimapper python==3.9.19

#2.  Liunx Activate the virtual environment:
conda activate epimapper

# alternative, Mac Activate the virtual environment:
source activate epimapper

#3.  Install pip if not already installed:
conda install pip

#4. Add channel in configure file .condarc such as
  channels:
  - conda-forge
  - bioconda
  - anaconda
  - defaults
 
#5. These dependencies can be installed one by one using the Conda package manager.
conda install --yes --file requirements.txt

# Alternatively, you can install the requirements using conda environment :
conda env create -f environment.yml  

#or if it does not work with requirments.tx file then please try to install dependent packages manually such as
#conda remove -n epimapper_mc --all
#conda create -n epimapper_mc python=3.9.19 --yes
#conda activate epimapper_mc
conda install samtools=1.21 deeptools=3.5.1 bedtools=2.31.1 --yes
conda install seaborn=0.12.2 setuptools=75.1.0 pandas=1.4.4 numpy=1.23.0 matplotlib=3.8.4 --yes
conda install plotnine=0.10.1 scipy=1.9.1 pathlib=1.0.1 scikit-learn=1.5.0 openjdk=22.0.1 --yes
conda install fastqc=0.12.1 MACS2=2.2.7.1 cutadapt=4.9 picard=3.1.1 bowtie2=2.5.4 --yes

#6. Build bowtie2 index before running demos
bowtie2-build ${path2reference_genome_fa} ${path2bowtie2_index_file}


